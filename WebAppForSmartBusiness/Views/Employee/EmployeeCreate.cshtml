@model EmployeeForView
@{
    ViewData["Title"] = "Create New Employee Page";
}

<form asp-action="EmployeeCreate" method="post">
    <br />
    <div class="container border p-3">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">Сreate Employee</h1>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">First Name</label>
            </div>
            <div class="col-4 pb-3">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Last Name</label>
            </div>
            <div class="col-4 pb-3">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Subdivisions</label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="Subdivision" class="form-select" asp-items="@ViewBag.Subdivisions">
                    <option disabled selected>---Select Subdivisions---</option>
                </select>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Positions</label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="Position" class="form-select" asp-items="@ViewBag.Positions">
                    <option disabled selected>---Select Positions---</option>
                </select>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">OutOfOfficeBalance</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="OutOfOfficeBalance" class="form-control" rows="5" />
                <span asp-validation-for="OutOfOfficeBalance" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">PeoplePartner</label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="PeoplePartner" class="form-select" asp-items="@ViewBag.PeoplePartners">
                    <option disabled selected>---Select Partner---</option>
                </select>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Status</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Status" class="form-control" rows="5" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Phone</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="EmployeeIndex" class="btn-primary btn form-control">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>