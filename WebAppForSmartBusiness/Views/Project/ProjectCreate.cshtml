@model ProjectForView
@{
    ViewData["Title"] = "Create New Project Page";
}

<form asp-action="ProjectCreate" method="post">
    <br />
    <div class="container border p-3">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">Сreate Project</h1>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Project manager</label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="ProjectManager" class="form-select" asp-items="@ViewBag.ProjectManagers">
                    <option disabled selected>---Select Manager---</option>
                </select>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Type</label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="ProjectType" class="form-select" asp-items="@ViewBag.ProjectTypes">
                    <option disabled selected>---Select Type---</option>
                </select>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Comment</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Status</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Start Date</label>
            </div>
            <div class="col-4 pb-3">
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">End Date</label>
            </div>
            <div class="col-4 pb-3">
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="ProjectIndex" class="btn-primary btn form-control">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>